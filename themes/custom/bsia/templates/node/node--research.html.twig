{#
/**
  News Node Content Type
  Based on node.html.twig
  A custom page template for news items.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}

{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}

<article{{ attributes.addClass(classes) }}>

  {% if not page %}
    {% if teaser %}
      <h2><a href="{{ url }}" rel="bookmark">{{ label }}</a></h2>
      {{ content.field_square_image }}
      {{ content.field_short_description }}
    {% endif %}

  {% else %}
  
  <div{{ content_attributes }}>
    <div class="image">{{ content.field_image }}</div>
    <div class="body">{{ content.body }}</div>

    {% if content.field_related_publications %}
      <div class="related-publications">
        <h2>Related Publications</h2>
        {{ content.field_related_publications }}
      </div>
    {% endif %}
  
    {% if members_string %}
      <div class="related-members">
        <h2>Members</h2>
        <div class="member-list">
          {{ members_string|raw }}
        </div>
      </div>
    {% endif %}

    </div>
{% endif %}
</article>